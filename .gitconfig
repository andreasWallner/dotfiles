[user]
	name = Andreas Wallner
	email = A.Wallner@innovative-solutions.at

[core]
   whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor=vim
	pager = less -x3

[color]
   ui = auto
[color "branch"]
   current = green
   local = yellow
   remote = white
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
   whitespace = red reverse
[color "status"]
   added = yellow
   changed = green
   untracked = cyan

[alias]
   st = status -sb
   ci = commit
   br = branch
   co = checkout
   df = diff
   lg = log -p

	gr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(magenta)<%an>%Creset' --abbrev-commit --date=relative
